<import src="post-itme/post-item-template.wxml" />
<view>
  <swiper catchtap='onSwiperTap'  indicator-dots='true' autoplay='true' interval='2000' indicator-color='rgba(200, 198, 186, .8)'>
    <swiper-item>
    <image  src="/images/post/bl.png" data-postId='4'></image>
    </swiper-item>
    <swiper-item>
    <image  src="/images/post/vr.png" data-postId='3'></image>
    </swiper-item>
    <swiper-item>
    <image  src="/images/post/sls.jpg" data-postId='1'></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{post_key}}" wx:key="index">
  <view catchtap="onPostTap" data-postId="{{item.postId}}">
   <template is="postItem" data="{{...item}}"/>
  </view>
</block>

</view>